    "stream-browserify": "^3.0.0",
    "swc-loader": "^0.2.3",
    "terser-webpack-plugin": "^5.3.3",
    "tsconfig-paths-webpack-plugin": "^3.5.2",
    "typescript": "^4.7.4",
