    "lint-staged": "^13.2.2",
    "mini-css-extract-plugin": "^2.7.5",
    "msw": "^1.2.1",
    "postcss": "^8.4.23",
    "postcss-cli": "^10.1.0",
    "postcss-loader": "^7.3.0",
    "pptr-testing-library": "^0.7.0",
    "prettier": "^2.8.8",
