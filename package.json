    "stream-browserify": "^3.0.0",
    "swc-loader": "^0.2.3",
    "terser-webpack-plugin": "^5.3.6",
    "tsconfig-paths-webpack-plugin": "^4.0.0",
    "typescript": "^4.8.4",
    "webpack": "^5.74.0",
    "webpack-cli": "^4.10.0",
    "webpack-dev-server": "^4.11.1",
    "webpack-sources": "^3.2.3",
    "wext-manifest-loader": "^2.3.0",
    "wext-manifest-webpack-plugin": "^1.2.1"
  }
}
