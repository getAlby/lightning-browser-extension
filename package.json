    "mini-css-extract-plugin": "^2.6.1",
    "msw": "^0.48.0",
    "postcss": "^8.4.18",
    "postcss-cli": "^10.0.0",
    "postcss-loader": "^7.0.1",
    "pptr-testing-library": "^0.7.0",
    "prettier": "^2.7.1",
    "process": "^0.11.10",
    "puppeteer": "^19.2.2",
    "resolve-url-loader": "^5.0.0",
    "sass": "^1.56.1",
